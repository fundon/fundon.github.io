    - &lt;&#x2F;span&gt;&lt;span style=&quot;color:#ff79c6;&quot;&gt;.:&#x2F;src
  links&lt;&#x2F;span&gt;&lt;span style=&quot;color:#f8f8f2;&quot;&gt;:
    - &lt;&#x2F;span&gt;&lt;span style=&quot;color:#ff79c6;&quot;&gt;mongo
